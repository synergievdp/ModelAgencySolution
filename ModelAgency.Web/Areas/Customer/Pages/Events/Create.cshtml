@page "/Customer/{id}/Events/Create"
@model ModelAgency.Web.Areas.Customer.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<form method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Event.Name"></label>
        <input asp-for="Event.Name" class="form-control" />
        <span asp-validation-for="Event.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Event.EventType"></label>
        <select asp-for="Event.EventType" asp-items="@Html.GetEnumSelectList<ModelAgency.Web.Data.Entities.EventType>()" class="form-control" ></select>
        <span asp-validation-for="Event.EventType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Event.Private" class="form-control" />
        <label asp-for="Event.Private"></label>
        <span asp-validation-for="Event.Private" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
